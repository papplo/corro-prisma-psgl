// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product {
  id                   String              @id @unique @default(cuid())
  name                 String?
  published            DateTime?           @default(now()) @updatedAt
  draft                Boolean?            @default(true)
  product_reference_id String?             @unique
  price                Float?
  rebate               Float?
  category             product_category?   @default(products)
  description_short    String?
  description_body     String?
  variations           Product_variation[]
  shipping             Freight?            @relation(fields: [freightId], references: [id])
  images               Image[]
  freightId            String?
}

model Product_variation {
  id                   String   @id @unique @default(cuid())
  name                 String?
  draft                Boolean? @default(true)
  product_reference_id String?  @unique
  price                Float?
  rebate               Float?
  description_short    String?
  description_body     String?
  Product              Product? @relation(fields: [productId], references: [id])
  productId            String?
}

model Freight {
  id          String             @id @unique @default(cuid())
  name        String?
  price       Float?
  description String?
  category    shipping_category?
  Product     Product[]
}

model Image {
  id        String   @id @unique @default(cuid())
  src       String
  host      String?
  alt_text  String?
  Product   Product? @relation(fields: [productId], references: [id])
  productId String?
}

enum product_category {
  products
  sale
  demo
  variation
}

enum shipping_category {
  express
  next_day
  bi_weekly
  exportation
}