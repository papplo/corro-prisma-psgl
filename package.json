{
  "name": "corro",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:client": "esbuild src/index.js --bundle --outfile=build/public/bundle.js --loader:.js=jsx",
    "build:server": "esbuild server/server.jsx --bundle --outfile=build/server.js --platform=node",
    "build": "npm run build:client && npm run build:server",
    "start": "node ./build/server.js",
    "watch": "watch 'npm run build' src server --ignoreDotFiles --ignoreInitial",
    "dev": "concurrently --kill-others \"npm run watch\" \"npm run start\"",
    "clean": "rm -rf ./build"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.0.1",
    "prisma": "^4.12.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "esbuild": "^0.17.16",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "swr": "^2.1.3"
  }
}
